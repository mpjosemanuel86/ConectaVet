<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryConectaVet</item>
    </style>

    <!-- Estilo para los botones de la aplicación -->
    <style name="BotonApp" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item> <!-- Letras blancas -->
        <item name="android:padding">22dp</item>
        <item name="android:background">@drawable/boton_cuadrado</item>
        <!-- Ajusta el padding según tus preferencias -->
        <item name="android:radius">22dp</item> <!-- Radio de la esquina -->
    </style>
</resources>
